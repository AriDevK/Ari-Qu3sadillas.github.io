@page "/links"
@inject HttpClient Http

<HeadTitle Title="Links"/>

<MudContainer MaxWidth="MaxWidth.Small">
    <MudGrid Style="text-align: center">
        <MudItem xs="12">
            <MudImage Src="images/ari.png" Alt="Ari avatar" Elevation="1" Class="rounded-circle avatar" Width="150"/>
        </MudItem>
        <MudItem xs="12">
            <MudText Typo="Typo.h4" Color="Color.Primary">Ariadne Rangel</MudText>
            <MudText Typo="Typo.subtitle1">ğ“†©â™¡ğ“†ª Web developer, Youtuber, Blogger and Magical Girl ğ“†©â™¡ğ“†ª</MudText>
        </MudItem>

        @if (_links != null)
        {
            foreach (var link in _links.Where(l => l.Active))
            {
                <MudItem xs="12">
                    <SocialLink Link="link"/>
                </MudItem>
            }

            <MudText Typo="Typo.h6" Class="mx-auto mt-3">Soon</MudText>

            foreach (var link in _links.Where(l => !l.Active))
            {
                <MudItem xs="12">
