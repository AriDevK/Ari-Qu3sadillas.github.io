                </MudItem>
            }
        }

        <MudItem xs="12">
            <MudText Typo="Typo.caption">Made with Blazor & â¤ by Ariadne Rangel</MudText>
        </MudItem>
    </MudGrid>
</MudContainer>

@code{
    private Link[]? _links = [];

    protected override async Task OnInitializedAsync()
    {
        _links = await Http.GetFromJsonAsync<Link[]>("data/links.json");
        StateHasChanged();
    }
}